    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@1inch/fusion-sdk": "^2.0.0",
    "@mysten/sui.js": "^0.54.1",
    "hono": "^4.0.0",
    "socket.io": "^4.6.1",
    "drizzle-orm": "^0.29.3",
    "postgres": "^3.4.3",
    "zod": "^3.22.4",
    "viem": "^2.7.0",
    "ethers": "^6.10.0",
    "jose": "^5.2.0",
    "ioredis": "^5.3.2",
    "lowdb": "^7.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.20.9"
  }
