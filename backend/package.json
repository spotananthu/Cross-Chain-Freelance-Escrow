{
  "name": "crosschain-freelance-escrow-backend",
  "version": "1.0.0",
  "description": "Backend for Cross-Chain Freelance Escrow Platform",
  "scripts": {
    "dev": "bun run --hot relayer/server.ts",
    "build": "bun build relayer/server.ts --outdir ./dist --target bun",
    "start": "bun run dist/server.js",
    "resolver:eth-to-sui": "bun run resolvers/eth-to-sui.ts",
    "resolver:sui-to-eth": "bun run resolvers/sui-to-eth.ts",
    "test": "bun test",
